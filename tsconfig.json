{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": ["*.ts"],
    "exclude": ["node_modules"]
} 